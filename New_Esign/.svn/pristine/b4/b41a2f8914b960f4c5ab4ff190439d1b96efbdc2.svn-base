@section scripts{
    <script>
        $(document).ready(function () {

            //hien thi theo he thong
            if ($('input:radio[name=Title15Content]:checked').length > 0) {
                var selectedRadio = $('input:radio[name=Title15Content]:checked').val();;
                if (selectedRadio == "Esign system 2.0") {
                    $('#plYellowCard').slideDown();
                    $('#plUSB').slideUp();
                    //$('#plAdmin').slideUp();

                } else if (selectedRadio == "PC InOut System/GoodsOut") {
                    $('#plYellowCard').slideUp();
                    //$('#plAdmin').slideDown();
                    $('#plUSB').slideDown();
                }
                else {
                    $('#plYellowCard').slideUp();
                    $('#plUSB').slideUp();
                    //$('#plAdmin').slideDown();
                }
            } else {
                $('#plYellowCard').hide();
                $('#plAdmin').hide();
                $('#plUSB').hide();
            }
            // get lai du lieu khi su dung ma the khac

            // subscribe to change events
            $('input:radio[name=Title15Content]').change(function () {
                var selectedRadio = $('input:radio[name=Title15Content]:checked').val();;
                if (selectedRadio == "Esign system 2.0") {
                    $('#plYellowCard').slideDown();
                    $('#plUSB').slideUp();
                    //$('#plAdmin').slideUp();

                } else if (selectedRadio == "PC InOut System/GoodsOut") {
                    $('#plYellowCard').slideUp();
                    //$('#plAdmin').slideDown();
                    $('#plUSB').slideDown();
                }
                else {
                    $('#plYellowCard').slideUp();
                    $('#plUSB').slideUp();
                    //$('#plAdmin').slideDown();
                }
            });

            $("#Title14Content").on('autocompletechange change', function () {
                var getdata = $("#Title14Content").val();

                $.get("/ApplicationIT/getLocation", { facID: $("#Title14Content").val() }, function (data) {
                    $("#Title5Content").empty();
                    $.each(data, function (index, row) {

                        $("#Title5Content").append("<option value='" + row.Location + "'>" + row.Location + "</option>")
                    });
                });

            }).change();

            $("#empID").change(function () {
                var reg = $("#empID").val();
                var json = { empID: reg };
                $.ajax({
                    type: "Get",
                    url: 'https://appvn6.foxconn.com.vn:1236/api/hr/getEmpObj',
                    contentType: "application/json; charset=utf-8",
                    data: { id: reg },
                    success: function (data) {

                        $("#empName").val(data.USER_NAME);
                        $("#Title3Content").val(data.DEPARTMENT_NAME);
                        $("#Title1Content").val(data.NOTES_ID);
                        $("#Title4Content").val(data.CURRENT_OU_CODE);
                    },
                    error: function (error) {

                        alert(error);
                    }
                });
            });
        });
        function myFunction() {
            var getData = $("#Title11Content").val();


            if (getData == "" || getData == null) {
                alert("Vui long dien thong tin vao: ");
            } else {
                var e = "Qua tuyet voi";
                $("#submit").click();
            }
        };

        $("confirm").click(function (e) {

            var getData = $("Title11Content").val();
            if (getData == null) {
                alert("Vui long dien thong tin vao: ");
            }
            else {
                var e = "Qua tuyet voi";
                $("submit").click();
            }
        }
        );

    </script>
}

